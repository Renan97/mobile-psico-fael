---
import logo from "../images/logo1.png";
import "./GlobalStyles.astro";
import icon from "../images/icon.png";
---

<div id="container-rodape" class="text">
  <div class="voga-font-header-2 footer-message">
    “POR UM EXISTIR AUTÊNTICO, LIBERTO E AUTORREALIZADOR”
  </div>
  <div class="row-2">
    <div class="footer-text social-media">
      <div>
        <img class="psico-icon" src={icon.src} alt={"logo"} />
        <span>
          <div>CRP: 06/208573</div>
          <div>Rafael Souza Pinho da Silva</div>
        </span>
      </div>

      <div>
        <a href="https://wa.me/5511965665977"
          ><i class="fa fa-whatsapp icon"></i>(11) 96566-5977</a
        >
      </div>
      <div>
        <a
          href="https://www.instagram.com/psi.rafaelpinho/"
          target="_blank"
          rel="noopener noreferrer"
          ><i class="fa fa-instagram icon"></i>@psi.rafaelpinho</a
        >
      </div>
    </div>
    <div class="menu-section footer-text">
      <span><b>NAVEGUE PELO SITE</b></span>
      <br />
      <a href="#container-servico"> Psicoterapia </a>
      <a href="#container-orientacao"> Orientação Profissional </a>
      <a href="#container-atendimento"> Atendimentos LGBTQIAPN+ </a>
      <a href="#container-eu"> Sobre Mim </a>
    </div>
    <img class="logo-image-footer" src={logo.src} alt={"logo"} />
  </div>
</div>

<style>
  #container-rodape {
    /* background-color: #062440; */
    background-color: #062440;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    padding: 20px 12%;
  }
  .logo-image-footer {
    max-width: 200px;
    height: fit-content;
    margin-right: 20px;
  }
  .row-2 {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }
  .menu-section {
    display: flex;
    flex-direction: column;
  }

  .footer-message {
    text-align: center;
    font-weight: normal;
    margin-bottom: 40px;
    font-size: 16pt;
  }
  .footer-text {
    font-family: Georgia, "Times New Roman", Times, serif;
  }

  .footer-text > div > a,
  .footer-text > div {
    flex-direction: row;
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
  }
  .psico-icon {
    width: 36px;
    height: 36px;
    display: block;
  }

  .icon {
    font-size: 36px;
  }

  .menu-section > a {
    text-decoration: none;
    color: white;
    position: relative;
    text-decoration: none;
    display: inline-block;
    width: fit-content;
  }

  .menu-section > a:after {
    display: block;
    content: "";
    border-bottom: solid 3px #fff;
    transform: scaleX(0);
    transition: transform 250ms ease-in-out;
    transform-origin: 100% 50%;
  }
  .menu-section > a:hover:after {
    transform: scaleX(1);
    transform-origin: 0 50%;
  }
  .social-media a {
    color: white;
    text-decoration: none;
  }
</style>
